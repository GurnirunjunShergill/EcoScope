generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id          String     @id @default(cuid())
  name        String?    // city or location name
  zip         String?    @unique
  latitude    Float
  longitude   Float
  measurements Measurement[]
  createdAt   DateTime   @default(now())
}

model Measurement {
  id          String     @id @default(cuid())
  location    Location   @relation(fields: [locationId], references: [id])
  locationId  String
  type        MeasurementType
  value       Float
  unit        String
  source      String
  recordedAt  DateTime
  createdAt   DateTime   @default(now())

  @@index([locationId, type, recordedAt])
}

enum MeasurementType {
  AQI
  TEMPERATURE
  CO2
  SOLAR_POTENTIAL
  PM25
  HUMIDITY
}
